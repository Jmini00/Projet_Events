{% extends 'base.html.twig' %}

{% block title %}Tous les évènements{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Events</h1>
        <a href="{{ path('app_event_add') }}" class="btn btn-success">Nouvel évènement</a>
    </div>

    {% include 'components/alert.html.twig' %}

    <ul class="list-group">
        {% for event in events %}
            <li class="list-group-item">
                <h4><a href="{{ path('app_event', { id: event.id }) }}">{{ event.name }}</a></h4>
                <p>{{ event.description }}</p>
                <small class="text-secondary d-flex justify-content-between align-items-center">
                    <span>Du {{ event.startDate|date('d.m.Y') }} au {{ event.endDate|date('d.m.Y') }}</span>
                    <span>
                        <a href="{{ path('app_event_edit', { id: event.id }) }}" class="text-primary">Editer</a> -
                        <a href="{{ path('app_event_delete', { id: event.id }) }}" class="text-danger">Supprimer</a>
                    </span>
                </small>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
